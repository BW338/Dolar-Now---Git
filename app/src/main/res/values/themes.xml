<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DolarNow" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottom_navigation</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BottomNavigation">
        <item name="background">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="itemTextColor">#F8F0F0</item>
        </style>

    <!-- ActionBar styles -->
    <style name="actionbar_style"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="toolbarNavigationButtonStyle">@style/actionbar_style</item>
        <item name="android:background">@color/bottom_navigation</item>
    </style>

    <style name="estilo.menu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/bottom_navigation</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/bottom_navigation</item>
    </style>

    <style name="estilo.sp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>